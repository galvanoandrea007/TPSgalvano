<!DOCTYPE html>
  <html lang="it">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maschera di Inserimento Dati</title>
    <script>
        function salvaDati() {
            const nome = document.getElementById("nome").value;
               const cognome = document.getElementById("cognome").value;
             const eta = document.getElementById("eta").value;
            const indirizzo = document.getElementById("indirizzo").value;
               const utente = { nome, cognome, eta, indirizzo };
             localStorage.setItem("utente", JSON.stringify(utente));
            window.location.href = "risultati.html";
        }
    </script>
  </head>
 <body>
    <h2>Inserisci i Dati dell'Utente</h2>
      <form onsubmit="event.preventDefault(); salvaDati();">
        <label for="nome">Nome:</label><br>
          <input type="text" id="nome" required><br><br>

         <label for="cognome">Cognome:</label><br>
        <input type="text" id="cognome" required><br><br>

         <label for="eta">Et√†:</label><br>
          <input type="text" id="eta" required><br><br>

        <label for="indirizzo">Indirizzo:</label><br>
        <input type="text" id="indirizzo" required><br><br>

         <button type="submit">Salva Dati</button>
     </form>
  </body>
  </html>
