<body>

<div id="home" class="pagina" style="display:block;">
  <p>Scegli un'opzione:</p>
  <button onclick="mostra('json')">Carica JSON</button>
  <button onclick="mostra('xml')">Carica XML</button>
</div>

<div id="json" class="pagina pagina-tabella">
  <input type="file" id="fileInputJSON" accept=".json">
  <button onclick="leggiJSON()">Carica persone.json</button>
  <h1>Elenco Persone</h1>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Indirizzo</th>
        <th>Città</th>
        <th>CAP</th>
      </tr>
    </thead>
    <tbody id="tabellaJSON"></tbody>
  </table>
</div>

<div id="xml" class="pagina pagina-tabella">
  <input type="file" id="fileInputXML" accept=".xml">
  <button onclick="leggiXML()">Carica persone.xml</button>
  <h1>Elenco Persone</h1>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Indirizzo</th>
        <th>Città</th>
        <th>CAP</th>
      </tr>
    </thead>
    <tbody id="tabellaXML"></tbody>
  </table>
</div>

<script>
function mostra(id) {
  document.getElementById("home").style.display = "none";
  document.getElementById("json").style.display = "none";
  document.getElementById("xml").style.display = "none";
  document.getElementById(id).style.display = "block";
}

var contenutoJSON = [];
var contenutoXML = [];

function leggiJSON() {
  const file = document.getElementById("fileInputJSON").files[0];
  const url = URL.createObjectURL(file);
  const req = new XMLHttpRequest();
  req.open("GET", url, true);
  req.send();
  req.onload = function () {
    contenutoJSON = JSON.parse(req.responseText);
    popolaJSON();
  }
}

function popolaJSON() {
  var t = document.getElementById("tabellaJSON");
  t.innerHTML = "";
  for (var i = 0; i < contenutoJSON.length; i++) {
    var p = contenutoJSON[i];
    var r = t.insertRow();
    r.insertCell(0).textContent = p.nome;
    r.insertCell(1).textContent = p.cognome;
    r.insertCell(2).textContent = p.indirizzo;
    r.insertCell(3).textContent = p.citta;
    r.insertCell(4).textContent = p.cap;
  }
}

function leggiXML() {
  const file = document.getElementById("fileInputXML").files[0];
  const url = URL.createObjectURL(file);
  const req = new XMLHttpRequest();
  req.open("GET", url, false);
  req.send();
  const xml = req.responseXML;
  const persone = xml.getElementsByTagName("persona");
  contenutoXML = [];
  for (var i = 0; i < persone.length; i++) {
    var p = persone[i];
    contenutoXML.push({
      nome: p.getElementsByTagName("nome")[0].textContent,
      cognome: p.getElementsByTagName("cognome")[0].textContent,
      indirizzo: p.getElementsByTagName("indirizzo")[0].textContent,
      citta: p.getElementsByTagName("citta")[0].textContent,
      cap: p.getElementsByTagName("cap")[0].textContent
    });
  }
  popolaXML();
}

function popolaXML() {
  var t = document.getElementById("tabellaXML");
  t.innerHTML = "";
  for (var i = 0; i < contenutoXML.length; i++) {
    var p = contenutoXML[i];
    var r = t.insertRow();
    r.insertCell(0).textContent = p.nome;
    r.insertCell(1).textContent = p.cognome;
    r.insertCell(2).textContent = p.indirizzo;
    r.insertCell(3).textContent = p.citta;
    r.insertCell(4).textContent = p.cap;
  }
}
</script>

</body>
