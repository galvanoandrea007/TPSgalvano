<!DOCTYPE html>
<body>
    <h2>Form di Registrazione</h2>
    
    <form>
        Cognome: <input type="text" id="cognome"><br><br>
        Nome: <input type="text" id="nome"><br><br>
        Indirizzo: <input type="text" id="indirizzo"><br><br>
        Città: <input type="text" id="citta"><br><br>
        CAP: <input type="text" id="cap"><br><br>
        Nazione: <input type="text" id="nazione"><br><br>
        <button type="button" onclick="visualizza()">Cliccami</button>
    </form>

    <div id="result"></div>

    <script>
        function visualizza() {
            let cognome = document.getElementById("cognome").value;
            let nome = document.getElementById("nome").value;
            let indirizzo = document.getElementById("indirizzo").value;
            let citta = document.getElementById("citta").value;
            let cap = document.getElementById("cap").value;
            let nazione = document.getElementById("nazione").value;

            let result = document.getElementById("result");
            result.innerHTML = "";

            let dati = [cognome, nome, indirizzo, citta, cap, nazione];
            let labels = ["Cognome", "Nome", "Indirizzo", "Città", "CAP", "Nazione"];

            for (let i = 0; i < dati.length; i++) {
                let div = document.createElement("div");
                div.style.fontFamily = "Helvetica";
                div.innerHTML = labels[i] + ": " + dati[i];
                result.appendChild(div);
            }
        }
    </script>
</body>
</html>
